# OpenClaw 环境变量配置

# OpenAI 配置（必需）
OPENAI_API_KEY=sk-your-api-key-here

# 远程机器配置（可选）

# SSH 服务器配置
SSH_SERVER_HOST=192.168.1.100
SSH_SERVER_PORT=22
SSH_SERVER_USER=root
SSH_SERVER_PASSWORD=your_password
# 如果使用密钥认证
# SSH_SERVER_KEY_PATH=~/.ssh/id_rsa

# WinRM 服务器配置
WINRM_SERVER_HOST=192.168.1.200
WINRM_SERVER_PORT=5986
WINRM_SERVER_USER=Administrator
WINRM_SERVER_PASSWORD=your_password
# WINRM_SSL=true
# WINRM_CERT_VALIDATION=false

# 资源限制
OPENCLAW_MAX_ITERATIONS=10         # Agent 最大循环次数
OPENCLAW_MAX_TOKENS=8000            # 最大上下文 Token 数
OPENCLAW_SHELL_TIMEOUT=60            # Shell 命令执行超时
OPENCLAW_WORKSPACE=./workspace      # 本地工作目录

# 安全配置
# OPENCLAW_LOCAL_ALLOWED_ROOTS=./workspace       # 本地允许的根目录
# OPENCLAW_LOCAL_BLOCKED_PATTERNS=*/Windows/*,*/System32/*

# Agent 配置
# OPENCLAW_MAX_ITERATIONS=10

# 额外的机器配置（可选）
# SSH_IS_DEFAULT=false
# WINRM_IS_DEFAULT=false
# SSH_ALLOWED_ROOTS=/,/,/home,/var
# WINRM_ALLOWED_ROOTS=C:/,D:/

# 额外的阻塞模式（可选）
# SSH_BLOCKED_PATTERNS=*/proc/*,*/sys/*,*/dev/*
# WINRM_BLOCKED_PATTERNS=*/Windows/System32/*

# 安全
# SECRET_KEY=your-secret-key-here-change-this

# 日志
LOG_LEVEL=INFO

# 其他
# OPENCLAW_MAX_ITERATIONS=10
OPENCLAW_MAX_TOKENS=8000
OPENCLAW_SHELL_TIMEOUT=60
OPENCLAW_WORKSPACE=./workspace

# 服务器配置（可选，覆盖 env）
HOST=0.0.0.0
PORT=8001
PUBLIC_URL=http://your-public-ip:8001
